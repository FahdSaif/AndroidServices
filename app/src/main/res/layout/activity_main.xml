<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.icm.fahd.services1.MainActivity">

    <Button
        android:id="@+id/BtnStartService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startservice"
        android:text="Start Service-StartedServices Example" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnStartService"
        android:onClick="stopservice"
        android:text="Stop Started-Service" />




    <EditText android:id="@+id/txtEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnStopService"
        android:text="hello" />


    <Button
        android:layout_below="@id/txtEditText"
        android:id="@+id/BtnStartIntentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startIntentservice"
        android:text="Start Service-IntentService Example" />

    <Button
        android:id="@+id/btnStopIntentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnStartIntentService"
        android:onClick="stopIntentservice"
        android:text="Stop Intent-Service" />


</RelativeLayout>
